# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nurox_healthcare"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Server Configuration
NODE_ENV="development"
PORT=3000

# CORS Configuration
CORS_ORIGIN="http://localhost:8081,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@nurox.com"

# Payment Processing (PayHere)
PAYHERE_MERCHANT_ID="1231130"
PAYHERE_MERCHANT_SECRET="MTQ3NDkyMzE0MjcyODc3MjQ3MzE1OTAyMDMzOTk1MDg1MTEyODY="
PAYHERE_SANDBOX="true"
BASE_URL="http://localhost:3000"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Twilio Configuration (Optional - for SMS)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google Cloud Configuration (Optional - for additional services)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_KEY_FILE="path/to/service-account-key.json"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/nurox-backend.log"

# Security Configuration
COOKIE_SECRET="your-cookie-secret-here"
SESSION_SECRET="your-session-secret-here"

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:8081"

# API Configuration
API_VERSION="v1"
API_PREFIX="/api"

# OCR Configuration
TESSERACT_LANG="eng"
TESSERACT_PSM=6

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000